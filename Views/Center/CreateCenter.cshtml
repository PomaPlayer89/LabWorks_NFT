@{
    ViewData["Title"] = "Создать центр";
}

<div class="container col-6 align-items-center mt-5">
    <h1 class="text-center mb-3">Добавить фитнес центр</h1>
    <form method="post" asp-controller="Center" asp-action="Create">
        <div class="form-group">
            <label for="Name">Наименование организации:</label>
            <input class="form-control" id="Name" type="text" name="Name" required />
        </div>
        <div class="form-group">
            <label for="AdressCity">Город:</label>
            <input class="form-control" id="AdressCity" type="text" name="AdressCity" required />
        </div>
        <div class="form-group">
            <label for="AdressStreet">Улица:</label>
            <input class="form-control" id="AdressStreet" type="text" name="AdressStreet" required />
        </div>
        <div class="form-group">
            <label for="AdressNumberHouse">Дом:</label>
            <input class="form-control" id="AdressNumberHouse" type="text" name="AdressNumberHouse" required />
        </div>
        <button type="submit" class="btn bg-warning btn-block">Создать</button>
    </form>
</div>